<Page
    x:Class="Amphibian.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Amphibian"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ListBox x:Name="listBox" Margin="10,10,10,8" Background="Transparent">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Height="80" VerticalAlignment="Top" Background="Transparent">
                        <TextBlock x:Name="nameblock" Text="{Binding Name}" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="57" Width="200" FontSize="25" Margin="10,10,0,0" Foreground="White" />
                        <Button x:ConnectionId='1' Content="Edit" HorizontalAlignment="Left" Margin="150,0,0,0" VerticalAlignment="Top" Height="70" Width="150" Background="#FF3E60F7"                       />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Page>

