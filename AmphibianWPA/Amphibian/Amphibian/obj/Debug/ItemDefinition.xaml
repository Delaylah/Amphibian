<Page
    x:Class="Amphibian.ItemDefinition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Amphibian"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="ITEM #" VerticalAlignment="Top" Height="42" Width="380" FontSize="30"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="10,165,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" PlaceholderText="Name"/>
        <TextBox x:Name="txtDescription" HorizontalAlignment="Left" Margin="10,247,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="239" Width="380" PlaceholderText="Description"/>
        <TextBox x:Name="txtID" HorizontalAlignment="Left" Margin="10,84,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" PlaceholderText="ID"/>
        <Button x:ConnectionId='1' x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="10,527,0,0" VerticalAlignment="Top" Background="#FF85EA31"                     />
        <Button x:ConnectionId='2' x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="281,527,0,0" VerticalAlignment="Top" Foreground="White" Background="#FFF12C2C"                        />
    </Grid>
</Page>

